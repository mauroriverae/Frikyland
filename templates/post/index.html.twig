{% extends 'base.html.twig' %}

{% block title %}{{parent()}}-Frikyland{% endblock %}

{% block body %}
    {{parent()}}
    <div class="container">
      {{form(form)}}
    </div>
    
      {% for post in posts %}
        <div class="container">
          <div class="card aling-items-center mt-5" style="width: 60rem;">
            {% if post.file != null %}
                <img class="w-150" src="{{ asset('uploads/files/' ~ post.file) }}">
            {% endif %}
            <div class="card-body">
              <span><a href="{{path('postDetails', {id:post.id})}}">ver mas</a></span>
              <h5 class="card-title">{{post.title}}</h5>
              <p class="card-text">{{post.type}}</p>
              <p class="card-text">{{post.description}}</p>
              <p>{{post.creation_date | date}}</p>
              <a href="{{post.url}}" class="btn btn-primary">more info</a>
              
            </div>
          </div>
        </div>
      {% endfor  %}
  
 
